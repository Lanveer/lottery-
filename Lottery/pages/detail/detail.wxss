/* pages/detail/detail.wxss */
page{
    font-family: microsoft yahei;
}
.header{
    display: flex;
    flex-direction: column;
}

.title{
   font-size: 32rpx;color: #000;
   padding: 44rpx 0 28rpx 30rpx;
}

.time{
    font-size: 22rpx;color: #888;
    padding: 0 0 0rpx 30rpx;
}

.body{
    width: 690rpx;height: auto;overflow: hidden;
    margin: auto;display: flex;flex-direction: column;
}
.body image{
    height: 300rpx;padding: 30rpx 0 20rpx 0;
}

.detail-header{
    font-size: 24rpx;color: #000;padding: 26rpx 0 20rpx 0;
}
.detail{
    font-size: 24rpx;color: #353535;line-height: 200%;text-indent: 40rpx;
}


